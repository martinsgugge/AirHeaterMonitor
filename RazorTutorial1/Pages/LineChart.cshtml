@page
@model RazorTutorial1.Pages.LineChartModel

@{
    ViewData["Title"] = "Line Chart";
    string chartTitle = "Temperature Data";
    string chartUnit = "Celsius";
    
}
<!--TODO datetime picker-->
<html>
<head>
    <title>Data Monitoring</title>
    <meta http-equiv="refresh" content="5" />
</head>


<body>
    <h1 class="display-4">Line Chart</h1>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

            var data = google.visualization.arrayToDataTable([
            ['Time', 'Data'],
            @foreach (var data in Model.chartDataList) {
                <text>['@data.ChartTimeStamp', @data.ChartValue],</text>
            }
            ]);
            var options = {
            title: '@Model.meas.MeasurementName',
            curveType: 'function',
            pointsVisible: true,
            lineWidth: 3,
            legend: 'none',
            hAxis: {title: 'Time'},
            vAxis: {title: '@Model.meas.MeasurementUnit'},
            width: '100%',
            height: '100%',
            chartArea: {width: '85%', height: '75%'}
            };
            var chart = new google.visualization.LineChart(document.getElementById('line_chart'));
            chart.draw(data, options);


        }
    </script>
    <div class="container-fluid lead">
        <div id="line_chart" style="width: 800px; height: 600px"></div>
    </div>
</body>
</html>