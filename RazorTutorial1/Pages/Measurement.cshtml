@page
@model RazorTutorial1.Pages.MeasurementModel
@{
    ViewData["Title"] = "Measurement Parameters";
}
<div>
    <h1>Measurement Parameters</h1>
    Below you see all the Measurement Names registered in the Database:
    
    <table class="table">
        <thead>
            <tr>
                <th>Measurement Name</th>
                <th>Unit</th>
                <th>Description</th>
                <th>ChartLink</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var measurement in Model.measurementParameterList)
            {
            <tr>
                <td> @measurement.MeasurementName</td>
                <td> @measurement.MeasurementUnit</td>
                <td> @measurement.MeasurementDescription</td>
                <td>
                    <a href="./DateTimePicker?tag=@measurement.MeasurementName;@measurement.MeasurementUnit;@measurement.MeasurementDescription;@measurement.MeasurementId"
                       class="btn-light" role="button">Choose time</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
